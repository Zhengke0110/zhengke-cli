{
  "name": "command",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/command/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["{projectRoot}", "dist/{projectRoot}"],
      "currentVersionResolver": "registry",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/command",
        "main": "packages/command/src/index.ts",
        "tsConfig": "packages/command/tsconfig.lib.json",
        "assets": [
          "packages/command/*.md",
          {
            "input": "packages/command",
            "glob": "package.json",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
